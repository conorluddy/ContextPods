{
  "name": "@context-pods/server",
  "version": "0.2.0",
  "description": "Core MCP server for Context-Pods toolkit",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "context-pods-server": "bin/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run --reporter=verbose --passWithNoTests",
    "test:coverage": "vitest run --reporter=verbose --passWithNoTests --coverage",
    "lint": "eslint 'src/**/*.ts'",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@context-pods/core": "^0.1.10",
    "@context-pods/templates": "^0.1.10",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "eslint": "^8.57.1"
  },
  "files": [
    "dist",
    "bin"
  ]
}
